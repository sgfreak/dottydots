set nocompatible
set lazyredraw
set ttyfast

set history=1000
set undofile
set undodir=~/.vim/undo

set nobackup
set nowritebackup
set noswapfile

set number
set relativenumber
set cursorline
set showmatch
set signcolumn=yes
syntax on
set tabstop=4
set shiftwidth=4
set expandtab
set smartindent
set ignorecase 
set smartcase
set incsearch
set hlsearch
set scrolloff=8
set wrap

